{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    // "baseUrl": "./src",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "./src/types"] // Include custom types directory
  },
  "include": ["src/**/*", "src/types/**/*.d.ts"], // types are included
  "exclude": ["node_modules"]
}
