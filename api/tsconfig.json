{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types", "./src/types"] // Include custom types directory
  },
  "include": ["src/**/*"], // Ensure types are included
  "exclude": ["node_modules", "**/*.spec.ts"]
}
